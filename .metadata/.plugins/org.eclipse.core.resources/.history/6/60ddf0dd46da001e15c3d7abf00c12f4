package recursividade;

import java.io.IOException;
import java.util.sc;

public class FatorialSimples {

	public static void main(String[] args)throws IOException {
		sc sc = new sc(System.in);
        System.out.println("Valor de N filtrado: " + filtrarN(sc));
	}
	
	public static int filtrarN(sc sc) {
        System.out.print("Digite um valor para N: ");
        int n = obterN(sc);
        if (validarN(n)) {
            return n;
        } else {
            System.out.println("O valor de N deve ser maior que 0 e menor que 13.");
            return filtrarN(sc);
        }
    }

    public static int obterN(sc sc) {
        int n;
        try {
            n = Integer.parseInt(sc.nextLine());
        } catch (NumberFormatException e) {
            System.out.println("Por favor, insira um valor inteiro vÃ¡lido.");
            return obterN(sc);
        }
        return n;
    }

    public static boolean validarN(int n) {
        return n > 0 && n < 13;
    }
}
